@{
    //Layout = "_Layout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Palavra - Login";
}

@if (TempData["MensagemErro"] != null)
{

    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<form method="post" action="/home/login">
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" name="email" value="" class="form-control" id="email" placeholder="Digite seu E-mail">
        @Html.ValidationMessage("email")
    </div>
    <div class="form-group">
        <label for="senha">Senha:</label>
        <input type="password" name="senha" value="" class="form-control" id="email" placeholder="Digite sua senha">
        @Html.ValidationMessage("senha")
    </div>
    <button type="submit" class="btn btn-primary">Logar</button>
</form>

@ViewBag.Messagem

